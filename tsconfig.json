{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "./src",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        },
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "sourceMap": true,
        "outDir": "./dist",
        "sourceRoot": "/",
        "inlineSources": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "alwaysStrict": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "include": ["src"],
    "exclude": ["dist", "**/*.test.ts"]
}
